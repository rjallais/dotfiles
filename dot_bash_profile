# .bash_profile

# Get the aliases and functions
if [ -f ~/.bashrc ]; then
    . ~/.bashrc
fi
# 
# User specific environment and startup programs

# Start fish shell for interactive sessions
if [[ "$-" == *i* ]] && [ -t 1 ]; then
  # Parent process command name (best-effort)
  parent=$(ps -o comm= "$PPID" 2>/dev/null || true)

  case "$parent" in
    *ijent*|*jetbrains*|*idea*|*tmp* )
      # Don't replace shell when launched by JetBrains temporary helpers or similar
      ;;
    *)
      # Replace bash with a login fish for normal interactive terminals
      exec /usr/sbin/fish -l
      ;;
  esac
fi


# Added by Toolbox App
export PATH="$PATH:/home/rjallais/.local/share/JetBrains/Toolbox/scripts"
